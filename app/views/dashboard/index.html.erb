<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
    <div class="mx-auto max-w-4xl">
        <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <% @boards.each do |board| %>
                <li class="col-span-1 divide-y divide-gray-200 rounded-lg bg-white shadow">
                    <div class="flex w-full items-center justify-between space-x-6 p-6">
                        <div class="flex-1 truncate">
                            <div class="flex items-center space-x-3">
                                <h3 class="truncate text-sm font-medium text-black">
                                    <%= link_to board.name, board_path(board), class: "text-base relative inline-flex items-center rounded-md border border-transparent hover:bg-sky-500 px-1 py-1 hover:text-white hover:shadow-sm" %>
                                </h3>
                            </div>
                            <p class="mt-1 truncate text-sm text-gray-500 mt-3 text-base relative inline-flex items-center rounded-md border border-transparent px-1 py-1">Textinho</p>
                        </div>
                    </div> 

                    <div>
                        <div class="-mt-px flex divide-x divide-gray-200">
                            <div class="flex w-0 flex-1">
                                <%= link_to edit_board_path(board), class: "cursor-pointer relative -mr-px inline-flex w-0 flex-1 items-center justify-center rounded-bl-lg border border-transparent py-4 text-sm font-medium text-gray-900 hover:text-white hover:bg-orange-500" do %>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                    </svg>
                                    <span class="ml-3">Editar</span>
                                <% end %>
                            </div>
                            <div class="-ml-px flex w-0 flex-1">
                                <a class="">
                                    <%= link_to board_path(board), data: { "turbo-method": :delete }, class: "cursor-pointer relative -mr-px inline-flex w-0 flex-1 items-center justify-center rounded-br-lg border border-transparent py-4 text-sm font-medium text-red-500 hover:text-white hover:bg-red-500" do %>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                    </svg>
                                    <span class="ml-3">Excluir</span>
                                    <% end %>
                                </a>
                            </div>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>    