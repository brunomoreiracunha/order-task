<div
    data-controller = "modal"
    id = "modal-wrapper"
    class = "hidden relative z-10"
    aria-labelledby = "modal-title"
    role = "dialog"
    aria-modal = "true"
>
    <div class = "hidden" id = "show-modal-div" data-action = "click->modal#showModal"></div>

    <div
        id = "modal-backdrop"
        class = "hidden fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        data-transition-enter = "ease-out duration-300"
        data-transition-enter-start = "opacity-0"
        data-transition-enter-end = "opacity-100"
        data-transition-leave = "ease-in duration-200"
        data-transition-leave-start = "opacity-100"
        data-transition-leave-end = "opacity-0"
    ></div>

    <div class = "fixed z-10 inset-0 overflow-y-auto">
        <div class = "flex items-end sm:items-center justify-center min-h-full p-4 text-center sm:p-0">
            <div
                id = "modal-panel"
                class = "hidden relative bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all mx-auto max-w-7xl lg:px-8 bg-white py-2 px-4 shadow sm:rounded-lg sm:px-10 space-y-8"
                data-transition-enter = "ease-out duration-300"
                data-transition-enter-start = "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
                data-transition-enter-end = "opacity-100 translate-y-0 sm:scale-100"
                data-transition-leave = "ease-in duration-200"
                data-transition-leave-start = "opacity-100 translate-y-0 sm:scale-100"
                data-transition-leave-end = "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
            >
                <div class = "justify-end flex">
                    <div class = "border border-gray-300 hover:bg-red-500 hover:border-transparent hover:text-white cursor-pointer" data-modal-target="closeButton">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </div>
                </div>
                
                <div class = "">
                    <p class="font-bold tracking-wide">Título da Tarefa:</p>
                    <p id="item-title"></p>

                    <p class = "font-bold tracking-wide">Descrição da Tarefa:</p>
                    <p id="item-description"></p>
                </div>
                <div class="mt-5">
                    <div class="-mt-px flex divide-x divide-gray-200">
                        <div class="flex w-0 flex-1">                    
                            <%= link_to "", class: "cursor-pointer w-0 flex-1 relative -mr-px inline-flex py-4 text-gray-900 hover:text-white hover:bg-orange-500 text-sm font-medium items-center justify-center rounded-tl-lg rounded-bl-lg border", id: "item-edit-link"  do %>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                </svg>
                                <span class="ml-1">Editar</span>
                            <% end %>
                        </div>
                        <div class="-ml-px flex w-0 flex-1">
                            <%= link_to "", class: "cursor-pointer w-0 flex-1 relative -mr-px inline-flex py-4 text-red-500 hover:text-white hover:bg-red-500 text-sm font-medium items-center justify-center rounded-tr-lg rounded-br-lg border", id: "item-delete-link",  data: { "turbo-method": :delete } do %>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />                                </svg>
                                <span class="ml-1">Excluir</span>
                            <% end %>
                        </div>
                    </div>                
                </div>
                <div class="">
                    <div class="">
                        <%= link_to "Atribuir Membro a Tarefa", "", class: "-my-2 py-2 px-2 bg-indigo-500 rounded-lg text-white cursor-pointer hover:bg-indigo-900 text-sm font-medium items-center", id: "item-assagin-member-link" %>
                    </div>

                    <div class="mt-8">
                        <p class="borter border-t font-bold tracking-wide text-lg mb-2">Membros Atribuidos para esta Tarefa</p>
                        <ul id="item-members-list"></ul>
                    </div>  
                </div>  
            </div>
        </div>
    </div>
</div>
